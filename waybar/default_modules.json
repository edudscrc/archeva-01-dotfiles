{
    "spacing": 0,
    "margin": 0,
    "modules-left": [
        "group/group-left"
    ],
    "modules-center": [
        "group/group-center"
    ],
    "modules-right": [
        "group/group-right"
    ],

    "group/group-left": {
        "orientation": "horizontal",
        "modules": [
            "hyprland/workspaces",
            "custom/spotify",
            "tray"
        ]
    },
    "group/group-center": {
        "orientation": "horizontal",
        "modules": [
            "clock"
        ]
    },
    "group/group-right": {
        "orientation": "horizontal",
        "modules": [
            "custom/wl-gammarelay-brightness",
            "wireplumber",
            "group/group-end",
            "custom/power"
        ]
    },

    "custom/spotify": {
    	"format": "{}",
   	    "exec": "/usr/bin/python3 ~/.config/waybar/assets/mediaplayer.py --player spotify",
   	    "return-type": "json",
   	    "on-click": "playerctl -p spotify play-pause",
   	    "on-scroll-up": "playerctl -p spotify next",
   	    "on-scroll-down": "playerctl -p spotify previous"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 6,
        "tooltip": false
    },

    "clock": {
        "format": "{:%a %d %b %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "format": {
                "months": "<span color='#ED45B8'><b>{}</b></span>",
                "days": "<span color='#4DCC90'><b>{}</b></span>",
                "weekdays": "<span color='#E77B2A'><b>{}</b></span>",
                "today": "<span color='#ED45B8'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click": "shift_reset",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "custom/wl-gammarelay-brightness": {
        "format": "󰃠 ▮▮▮▯▯▯▯▯▯▯",
        "tooltip": false,
        "exec": "wl-gammarelay-rs watch {bp}",
        "on-scroll-up": "busctl --user -- call rs.wl-gammarelay / rs.wl.gammarelay UpdateBrightness d +0.02",
        "on-scroll-down": "busctl --user -- call rs.wl-gammarelay / rs.wl.gammarelay UpdateBrightness d -0.02"
    },
    "wireplumber": {
	    "format": " ▮▮▮▯▯▯▯▯▯▯",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip": false
    },
    "group/group-end": {
        "orientation": "horizontal",
        "modules": [
            "bluetooth",
            "custom/pipe",
            "network",
            "custom/pipe"
        ]
    },
    
    "bluetooth": {
        "format-disabled": "",
        "format-off": "󰂲",
        "format-on": "󰂯",
        "format-connected": "󰂱",
        "on-click-right": "kitty -e bluetoothctl",
        "on-click": "bluetoothctl show | grep -q \"Powered: yes\" && bluetoothctl power off || bluetoothctl power on",
        "tooltip-format-connected": "{device_alias}\t{device_address}"
    },
    "network": {
    	"interval": 60,
        "format-wifi": "",
        "format-ethernet": "",
        "format-disconnected": "",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-wifi": "{essid}"
    },
    "custom/power": {
    	"format": "{icon}",
		"format-icons": "",
		"on-click": "wlogout",
    	"tooltip": false
    },
    "custom/pipe": {
    	"format": "|",
    	"tooltip": false
    }
}