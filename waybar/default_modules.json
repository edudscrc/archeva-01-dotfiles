{
    "spacing": 12,
    "margin": 0,
    "modules-left": [
        "custom/archicon",
        "hyprland/workspaces",
        "custom/spotify",
        "tray"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "custom/wl-gammarelay-brightness",
        "pulseaudio#sound",
        "group/group-end",
        "custom/power"
    ],

    "custom/archicon": {
        "format": "",
        "tooltip": false,
        "on-click": "rofi -show drun"
    },
    "custom/spotify": {
    	"format": "{}",
   	    "exec": "/usr/bin/python3 ~/.config/waybar/assets/mediaplayer.py --player spotify",
   	    "return-type": "json",
   	    "on-click": "playerctl -p spotify play-pause",
   	    "on-scroll-up": "playerctl -p spotify next",
   	    "on-scroll-down": "playerctl -p spotify previous"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 6,
        "tooltip": false
    },


    "clock": {
        "format": "{:%a %d %b %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "format": {
                "months": "<span color='#ED45B8'><b>{}</b></span>",
                "days": "<span color='#4DCC90'><b>{}</b></span>",
                "weekdays": "<span color='#E77B2A'><b>{}</b></span>",
                "today": "<span color='#ED45B8'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click": "shift_reset",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "custom/wl-gammarelay-brightness": {
        "format": "󰃠 {}%",
        "tooltip": false,
        "exec": "wl-gammarelay-rs watch {bp}",
        "on-scroll-up": "busctl --user -- call rs.wl-gammarelay / rs.wl.gammarelay UpdateBrightness d +0.02",
        "on-scroll-down": "busctl --user -- call rs.wl-gammarelay / rs.wl.gammarelay UpdateBrightness d -0.02"
    },
    "pulseaudio#sound": {
	    "format": "{icon} {volume}%",
        "format-muted": " {volume}%",
        "format-icons": {
            "default": ["", "", " "]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip": false
    },
    "group/group-end": {
        "orientation": "horizontal",
        "modules": [
            "bluetooth",
            "custom/pipe",
            "network"
        ],
        "spacing": 15
    },
    "bluetooth": {
        "format-disabled": "",
        "format-off": "󰂲",
        "format-on": "󰂯",
        "format-connected": "󰂱",
        "on-click-right": "bluetoothctl disconnect",
        "on-click": "kitty -e bluetoothctl",
        "tooltip-format-connected": "{device_alias}\t{device_address}"
    },
    "network": {
    	"interval": 60,
        "format-wifi": "",
        "format-ethernet": "",
        "format-disconnected": "",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-wifi": "{essid}"
    },
    "custom/power": {
    	"format": "{icon}",
		"format-icons": "",
		"on-click": "wlogout",
    	"tooltip": false
    },
    "custom/pipe": {
    	"format": "|",
    	"tooltip": false
    }
}